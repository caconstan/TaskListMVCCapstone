@model TaskListLab.Models.TaskList

@{
    ViewData["Title"] = "Create New Task";
}

<h4>Create New Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="CreateTask" method="POST">

            <div class="form-group">
                Description: <input required name="Description" />
            </div>
            <div class="form-group">
                Due Date: <input required type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" name="DueDate" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create Task" />
            </div>
        </form>
    </div>
</div>

@Html.ValidationSummary()